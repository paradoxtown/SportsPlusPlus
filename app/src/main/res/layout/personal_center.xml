<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorInternal">

    <LinearLayout
        android:id="@+id/personCenterHead"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/person_center_bg"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginStart="40dp" />

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="0dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="75dp"
                android:text="@string/username"
                android:textColor="@color/colorContentWhite" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:text="@string/description"
                android:textColor="@color/colorPureBlack"
                android:layout_marginStart="10dp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/personCenterItems"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:background="@drawable/linear_layout_bg"
                android:id="@+id/attention_teams"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ball_ico"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/basketball"/>

                <TextView
                    android:id="@+id/attention_teams_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/attention_teams"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/attention_list"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </ListView>

            <LinearLayout
                android:background="@drawable/linear_layout_bg"
                android:id="@+id/my_game_admin_games"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_game_ball_ico"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/basketball"/>

                <TextView
                    android:id="@+id/my_game_admin_games_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/admin_game"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/my_game_admin_games_list"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </ListView>

            <LinearLayout
                android:background="@drawable/linear_layout_bg"
                android:id="@+id/my_game_attention_games"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/basketball"/>

                <TextView
                    android:id="@+id/my_game_attention_games_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/attention_offline"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/my_game_attention_games_list"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </ListView>

            <LinearLayout
                android:background="@drawable/linear_layout_bg"
                android:id="@+id/modify_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/modify_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/modify_password"
                    android:textColor="@color/birth_player_color"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/linear_layout_bg"
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/log_out_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorAccent"
                    android:text="@string/log_out" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>